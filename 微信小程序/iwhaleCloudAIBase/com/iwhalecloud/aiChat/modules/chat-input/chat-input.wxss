@import "voice.wxss";
@import "extra.wxss";

.btn-voice-press {
    background-color: gainsboro;
}

button{
    font-size: 32rpx;
    width:610rpx;
    line-height: 74rpx;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}


input{
    padding-top: 10rpx;
    padding-bottom:10rpx;
    width: 100%;
}

.extra-btn-style{
    width: 65rpx;
    height: 65rpx;
    padding: 10rpx 15rpx;
    display: flex;
    flex-shrink: 0;
}
.input-flex-column{
    width:100%;
    display: flex;
    flex-direction:column;
    position: fixed;
    left: 0;
    bottom: 0;
}
.input-text-voice-super{
    display: flex;
    flex-direction: row;
    background-color: white;
    width: 100%;
    align-items: center;
    height:120rpx;
}

.list-divide-line {
    width: 100%;
    height: 1rpx;
    background-color: #dddddd;
}

.chat-input-style{
    border-radius:10rpx;
    border:1rpx solid gainsboro;
    margin-top:10rpx;
    margin-bottom: 10rpx;
    padding:10rpx;
    min-height: 51rpx;
		width: 530rpx;
    background-color: #EFEFEF;
}

.chat-input-send-button-style{
    width: 110rpx;
    padding: 12rpx 0;
    font-size: 30rpx;
    text-align: center;
    margin: 0 10rpx;
    border-radius: 10rpx;
}