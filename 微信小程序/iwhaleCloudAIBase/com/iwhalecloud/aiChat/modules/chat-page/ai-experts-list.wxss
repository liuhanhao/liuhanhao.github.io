/* 专家选择 */
.appriase-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  background: rgba(0, 0, 0, 0.4);
  display: none;
}

.appriase-dialog__container {
  position: fixed;
  bottom: 0rpx;
  right: 0;
  left: 0;
  height: 600rpx;
  background: #f8f8f8;
  transform: translateY(300%);
  transition: all 0.4s ease;
  z-index: 101;
  border-radius: 20rpx;
  box-shadow: 0px 3px 3px 2px gainsboro;
}

.appriase-dialog--show .appriase-dialog__container {
  transform: translateY(0);
}

.appriase-dialog--show .appriase-dialog__mask {
  display: block;
}
.appriase-item-name {
	font-size: 35rpx;
	color: gray;
}


.experts-icon-image {
	margin-left: 30rpx;
}

.experts-starRate {
	width: 30rpx;
	height: 30rpx;
}