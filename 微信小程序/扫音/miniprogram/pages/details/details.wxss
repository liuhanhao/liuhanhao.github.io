@import "../editor/zoom-image.wxss";


@keyframes background-music
{
    from {transform: rotateZ(0deg);}
    to {transform: rotateZ(360deg);}
}
.details-background-music {
	position: fixed;
	border-radius: 50rpx;
	width: 100rpx;
	height: 100rpx;
	top: 40rpx;
	right: 40rpx;
	z-index:51;
}

.details-backgroundImage {
	width: 100%;
	height: 100%;
	background-size: cover;
	position: fixed;
	z-index: -1;
}

.slide-image {
	width: 690rpx;
	margin-left: 30rpx;
	height: 370rpx;
}

.details-label {
	font-size: 37rpx;
	line-height: 39rpx;
}
.details-flex-row {
	display: flex;
	flex-direction: row;
}



.typing {
	margin-left: 30rpx;
	/* border-right: 1px solid transparent; */
	word-break: break-all;
	overflow: hidden;
	font-size: 35rpx;
	line-height: 45rpx;
	width: 690rpx;
}
/* 打印效果 */
@keyframes typing {
    from { width: 0; }
    to { width: 690rpx; }
}
/* 光标闪啊闪 */
@keyframes blink-caret {
    from, to { border-color: transparent; }
    50% { border-color: currentColor; }
}

@keyframes FadeIn
{
    from {opacity: 0;}
    to {opacity: 1;}
}
.FadeInFrame-animation {
	animation: FadeIn 2.3s linear infinite;
}
.FadeInFrame-default {
	opacity: 0;
}


/* audio组件 */
.details-audio-view {
	margin-left:30rpx;
	margin-right:30rpx;
	margin-top:30rpx;
	height: 150rpx;
	background-color: white;
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
}
.details-audio-poster {
	width: 150rpx;
	height: 150rpx;
}
.details-audio-author {
	height: 150rpx;
	width: 540rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	font-size: 30rpx;
		
}
.details-audio-poster-small {
	position: absolute;
	width: 80rpx;
	height: 80rpx;
	border-radius: 40rpx;
	left: 35rpx;
	top: 35rpx;
	opacity: 0.8;
}