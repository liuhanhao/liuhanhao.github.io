/* pages/editor/editor.wxss */
@import "zoom-image.wxss";

.editor-backgroundImage {
	width: 100%;
	height: 100%;
	background-size: cover;
	position: fixed;
	z-index: -1;
}

@keyframes background-music
{
    from {transform: rotateZ(0deg);}
    to {transform: rotateZ(360deg);}
}
.editor-background-music {
	position: fixed;
	border-radius: 50rpx;
	width: 100rpx;
	height: 100rpx;
	bottom: 150rpx;
	right: 50rpx;
}

.editor-flex-view-row {
	display: flex;
	flex-direction: row;
}

.editor-flex-view-column {
	display: flex;
	flex-direction: column;
	align-items: center;
}

.editor-label {
	font-size: 35rpx;
	margin-top: 30rpx;
	margin-left: 30rpx;
	line-height: 35rpx;
}

.to-textarea-ios {
	padding: 0rpx;
	margin-top: 7rpx;
	font-size: 35rpx;
	width: 480rpx;
	height: 35rpx;
}
.to-textarea-android {
	padding: 0rpx;
	margin-top: 27rpx;
	font-size: 35rpx;
	width: 480rpx;
	height: 35rpx;
}

.editor-image {
	width: 100rpx;
	height: 100rpx;
	border-radius: 50rpx;
	margin-top: 35rpx;
}

.editor-white-view {
	background-color: white;
	border-radius: 10rpx;
	margin: 25rpx 25rpx 10rpx 25rpx;
	padding: 20rpx;
	
}

.editor-record-image {
	width: 100rpx;
	height: 100rpx;
	/* background-color: rgb(60, 169, 248);
	border-radius: 50rpx; */
}
.editor-record-label {
	font-size: 30rpx;
	line-height: 50rpx;
}

.editor-white-view-media {
	background-color: white;
	border-radius: 10rpx;
	padding: 30rpx;
	margin: 25rpx 25rpx 10rpx 25rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.editor-button {
	font-size: 40rpx;
	line-height: 40rpx;
	padding: 20rpx;
  height: 80rpx;
	width: 30%;
	background: #0c99de;
	color: white;
}

.editor-delete-button {
	font-size: 30rpx;
	line-height: 30rpx;
	padding: 20rpx;
  height: 70rpx;
	width: 100rpx;
	right: 5rpx;
	top: 15rpx;
	position: absolute;
} 


.editor-delete-image {
	position: absolute;
	width: 50rpx;
	height: 50rpx;
	right: 0rpx;
	top: 0rpx;
	border-radius: 25rpx;
}